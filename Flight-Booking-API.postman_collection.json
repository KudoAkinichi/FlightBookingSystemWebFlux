{
  "info": {
    "name": "Flight Booking System API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Create Airline - IndiGo",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "url": "http://localhost:8081/api/v1/admin/airlines",
        "body": {
          "mode": "raw",
          "raw": "{\"airlineCode\":\"6E\",\"name\":\"IndiGo\",\"logoUrl\":\"https://example.com/logos/indigo.png\",\"contactEmail\":\"support@goindigo.in\",\"contactPhone\":\"+91-9910383838\",\"website\":\"https://www.goindigo.in\"}"
        }
      }
    },
    {
      "name": "2. Create Airport - Delhi",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "url": "http://localhost:8081/api/v1/admin/airports",
        "body": {
          "mode": "raw",
          "raw": "{\"iataCode\":\"DEL\",\"name\":\"Indira Gandhi International Airport\",\"city\":\"New Delhi\",\"country\":\"India\",\"timezone\":\"Asia/Kolkata\"}"
        }
      }
    },
    {
      "name": "3. Add Flight Inventory",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "url": "http://localhost:8081/api/v1/admin/inventory",
        "body": {
          "mode": "raw",
          "raw": "{\"airlineCode\":\"6E\",\"flightNumber\":\"6E2045\",\"origin\":\"DEL\",\"destination\":\"BOM\",\"departureDateTime\":\"2025-11-25T08:00:00\",\"arrivalDateTime\":\"2025-11-25T10:30:00\",\"aircraftType\":\"Airbus A320\",\"totalSeats\":180,\"baseFare\":4500.00,\"currency\":\"INR\"}"
        }
      }
    },
    {
      "name": "4. Search Flights",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "url": "http://localhost:8081/api/v1/flights/search",
        "body": {
          "mode": "raw",
          "raw": "{\"origin\":\"DEL\",\"destination\":\"BOM\",\"departureDate\":\"2025-11-25\",\"passengers\":2,\"tripType\":\"ONEWAY\",\"cabinClass\":\"ECONOMY\"}"
        }
      }
    },
    {
      "name": "5. Health Check",
      "request": {
        "method": "GET",
        "url": "http://localhost:8081/api/v1/health"
      }
